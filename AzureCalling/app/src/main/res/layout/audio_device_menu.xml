<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="112dp"
    android:background="@color/audio_device_menu"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:clickable="true"
    android:focusable="true"
    tools:visibility="invisible">

    <ImageView
        android:id="@+id/icon_for_audio_device_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="23dp"
        android:layout_marginStart="18dp"
        app:srcCompat="@drawable/ic_fluent_speaker_2_24_regular" />

    <ImageView
        android:id="@+id/icon_for_audio_device_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginStart="18dp"
        app:srcCompat="@drawable/ic_fluent_speaker_2_24_filled" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/audio_output_android"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="68dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/text_for_audio_device_android"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="0dp"
            android:text="@string/audio_device_android"/>

        <ImageButton
            android:id="@+id/check_mark_for_audio_android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            android:src="@drawable/ic_fluent_checkmark_24_regular"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/audio_output_android"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="72dp"
        android:layout_marginTop="11.5dp"
        android:src="@drawable/ic_line_horizontal_divider"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/audio_output_speaker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/text_for_audio_device_speaker"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="0dp"
            android:text="@string/audio_device_speaker"/>

        <ImageButton
            android:id="@+id/check_mark_for_audio_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            android:background="@null"
            android:visibility="invisible"
            android:src="@drawable/ic_fluent_checkmark_24_regular"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/audio_output_speaker"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="72dp"
        android:layout_marginTop="11.5dp"
        android:src="@drawable/ic_line_horizontal_divider"/>

</androidx.constraintlayout.widget.ConstraintLayout>