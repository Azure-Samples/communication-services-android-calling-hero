<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_header"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginTop="8dp"
    android:alpha="0.8"
    android:background="@color/defaultBlack"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible">

        <TextView
            android:id="@+id/participantTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/number_of_participants"
            android:textColor="@color/defaultWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/participantCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/defaultWhite"
            app:layout_constraintBaseline_toBaselineOf="@+id/participantTextView"
            app:layout_constraintRight_toRightOf="@+id/participantTextView"
            app:layout_constraintStart_toEndOf="@+id/participantTextView"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/participant_drawer_button"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:layout_marginEnd="46dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/open_participant_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_fluent_people_24_regular" />
</androidx.constraintlayout.widget.ConstraintLayout>

