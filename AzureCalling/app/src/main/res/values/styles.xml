<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.Fluent" parent="Theme.AppCompat.DayNight">
    </style>

    <style name="intro_exceptional"></style>
    <style name="intro_features"></style>
    <style name="intro_learn"></style>

    <style name="Theme.Fluent" parent="Base.Theme.Fluent">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- List Item -->
    <style name="FluentButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>

        <item name="android:background">@drawable/button_filled</item>
        <item name="android:textColor">@color/selector_button_filled_text</item>

    </style>

    <style name="FluentButtonOutlined">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>

        <item name="android:background">@drawable/button_outlined</item>
        <item name="android:textColor">@color/selector_button_outlined_text</item>


    </style>

</resources>