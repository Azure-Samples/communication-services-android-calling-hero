<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.azure.samples.acscall">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission
        android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name="com.azure.samples.acscall.ACSCall"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fluent"
        android:hardwareAccelerated="true"
        android:hasFragileUserData="true">
        <activity
            android:name="com.azure.samples.acscall.EndActivity"
            android:exported="true"
            android:parentActivityName="com.azure.samples.acscall.CallActivity"
            android:screenOrientation="portrait" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <!-- Required for AAD Authentication -->
        <activity android:name="com.microsoft.identity.client.BrowserTabActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- android:path uses debug.keystore sha1-hash -->
                <data
                    android:host="com.azure.samples.acscall"
                    android:path="/44rymnrbe1l8wfl8deB3a/fQqhs="
                    android:scheme="msauth" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.azure.samples.acscall.CallActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|screenLayout"
            android:parentActivityName="com.azure.samples.acscall.SetupActivity"
            android:screenOrientation="sensor"
            android:launchMode="singleTop"/>
        <activity
            android:name="com.azure.samples.acscall.SetupActivity"
            android:exported="true"
            android:label="@string/title_activity_setup"
            android:taskAffinity="com.azure.samples.acscall.setupaffinity"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName="com.azure.samples.acscall.IntroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.azure.samples.acscall.JoinCallActivity"
            android:exported="true"
            android:label="@string/title_activity_join_call"
            android:taskAffinity="com.azure.samples.acscall.setupaffinity"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName="com.azure.samples.acscall.IntroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.azure.samples.acscall.IntroActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.azure.samples.acscall.helpers.InCallService"
            android:stopWithTask="true"
            android:foregroundServiceType="microphone"/>
    </application>

</manifest>
